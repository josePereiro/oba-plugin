{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    // "target": "ES6",
    "target": "es2020",
    "allowJs": true,
    // "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "noEmitOnError": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "exclude": [
    "dev",
    "node_modules",
    "_DEPRECATED"
  ],
  "include": [
    "**/*.ts",
    "types/**/*"
  ]
}
