{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    // "module": "ESNext",
    "module": "NodeNext",
    // "target": "ES6",
    "target": "es2020",
    "allowJs": false,
    // "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "noEmitOnError": true,
    "lib": ["DOM", "ES2020"]
  },
  "exclude": [
    "dev",
    "node_modules",
    "_DEPRECATED"
  ],
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
